<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8FAFC"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtros"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#0F172A"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/huella"
                app:tint="#475569"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>

        <TextView
            style="@style/SectionTitle"
            android:text="Especie"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/groupType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Todos"
                android:checked="true"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Perro"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Gato"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Conejo"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Hámster"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Ave"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>
        </com.google.android.material.chip.ChipGroup>

        <TextView
            style="@style/SectionTitle"
            android:text="Edad"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/groupAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Todas"
                android:checked="true"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Cachorro (0-1 año)"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Joven (1-3 años)"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Adulto (4-7 años)"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Senior (8-10 años)"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Muy Senior (11+ años)"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>
        </com.google.android.material.chip.ChipGroup>

        <TextView
            style="@style/SectionTitle"
            android:text="Tamaño"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/groupSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Todos"
                android:checked="true"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Pequeño"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Mediano"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Grande"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>
        </com.google.android.material.chip.ChipGroup>

        <TextView
            style="@style/SectionTitle"
            android:text="Sexo"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/groupSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:layout_marginBottom="36dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Todos"
                android:checked="true"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Macho"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Hembra"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_selector"
                android:textColor="@color/chip_text_selector"
                app:chipCornerRadius="24dp"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="#E2E8F0"/>

        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Limpiar"
                android:textAllCaps="false"
                android:textColor="#334155"
                android:backgroundTint="#E2E8F0"
                app:strokeWidth="1dp"
                app:strokeColor="#CBD5E1"
                app:cornerRadius="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Aplicar filtros"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/greenPrimary"
                app:elevation="4dp"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>