<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/primary_color"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Foto usuario -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUserIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/usuario"
            android:tint="@color/primary_color"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MarÃ­a GarcÃ­a"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imgUserIcon"
            app:layout_constraintTop_toTopOf="@id/imgUserIcon"
            app:layout_constraintEnd_toStartOf="@id/tvHora"
            android:layout_marginStart="12dp"/>

        <!-- Hora -->
        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:45 AM"
            android:textSize="12sp"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvNombreUsuario"/>

        <!-- Ãšltimo mensaje -->
        <TextView
            android:id="@+id/tvUltimoMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hola, estoy interesada en adoptar..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tvNombreUsuario"
            app:layout_constraintTop_toBottomOf="@id/tvNombreUsuario"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Mascota -->
        <TextView
            android:id="@+id/tvMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¶ Luna"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_chip_green"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintStart_toStartOf="@id/tvUltimoMensaje"
            app:layout_constraintTop_toBottomOf="@id/tvUltimoMensaje"
            android:layout_marginTop="6dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
