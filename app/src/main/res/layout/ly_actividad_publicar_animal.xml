<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="@drawable/bg_header_green"
                android:padding="18dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:backgroundTint="#00000000"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/atras"
                    app:iconSize="20dp"
                    app:iconTint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="Publicar animal"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnBack"
                    app:layout_constraintTop_toTopOf="@id/btnBack" />

                <TextView
                    android:id="@+id/txtSubtitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="Completa la información del animal"
                    android:textColor="#E8FFFFFF"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="@id/txtTitulo"
                    app:layout_constraintStart_toStartOf="@id/txtTitulo"
                    app:layout_constraintTop_toBottomOf="@id/txtTitulo" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFotoPublicar"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="18dp"
                    app:strokeColor="#14000000"
                    app:strokeWidth="1dp">

                    <FrameLayout
                        android:id="@+id/frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/layoutPlaceholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/subir"
                                app:tint="@color/gray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Toca para seleccionar una foto"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Desde galería o cámara"
                                android:textColor="@color/text_dark"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgAnimal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/siberiano" />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#14000000"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del animal *"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.FilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="#F3F5F7"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtNombrePublicar"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="Ej: Luna"
                                android:textColor="@color/text_dark"
                                android:textColorHint="@color/gray"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Especie *"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="#F3F5F7"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/actEspeciePublicar"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:hint="Selecciona una especie"
                                android:inputType="none"
                                android:textColor="@color/text_dark"
                                android:textColorHint="@color/gray"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raza *"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.FilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="#F3F5F7"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtRazaPublicar"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="Ej: Golden Retriever"
                                android:textColor="@color/text_dark"
                                android:textColorHint="@color/gray"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edad *"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#F3F5F7"
                                    app:boxCornerRadiusBottomEnd="14dp"
                                    app:boxCornerRadiusBottomStart="14dp"
                                    app:boxCornerRadiusTopEnd="14dp"
                                    app:boxCornerRadiusTopStart="14dp"
                                    app:boxStrokeWidth="0dp">

                                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                        android:id="@+id/actEdadPublicar"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:hint="Seleccionar"
                                        android:inputType="none"
                                        android:textColor="@color/text_dark"
                                        android:textColorHint="@color/gray"
                                        android:textSize="14sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tamaño *"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#F3F5F7"
                                    app:boxCornerRadiusBottomEnd="14dp"
                                    app:boxCornerRadiusBottomStart="14dp"
                                    app:boxCornerRadiusTopEnd="14dp"
                                    app:boxCornerRadiusTopStart="14dp"
                                    app:boxStrokeWidth="0dp">

                                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                        android:id="@+id/actTamanoPublicar"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:hint="Tamaño"
                                        android:inputType="none"
                                        android:textColor="@color/text_dark"
                                        android:textColorHint="@color/gray"
                                        android:textSize="14sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Peso"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#F3F5F7"
                                    app:boxCornerRadiusBottomEnd="14dp"
                                    app:boxCornerRadiusBottomStart="14dp"
                                    app:boxCornerRadiusTopEnd="14dp"
                                    app:boxCornerRadiusTopStart="14dp"
                                    app:boxStrokeWidth="0dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtPesoPublicar"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:hint="Ej: 5 kg"
                                        android:inputType="text"
                                        android:textColor="@color/text_dark"
                                        android:textColorHint="@color/gray"
                                        android:textSize="14sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sexo *"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#F3F5F7"
                                    app:boxCornerRadiusBottomEnd="14dp"
                                    app:boxCornerRadiusBottomStart="14dp"
                                    app:boxCornerRadiusTopEnd="14dp"
                                    app:boxCornerRadiusTopStart="14dp"
                                    app:boxStrokeWidth="0dp">

                                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                        android:id="@+id/actSexoPublicar"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:hint="Selecciona"
                                        android:inputType="none"
                                        android:textColor="@color/text_dark"
                                        android:textColorHint="@color/gray"
                                        android:textSize="14sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperamento *"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="#F3F5F7"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:boxStrokeWidth="0dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtTemperamentoPublicar"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="Ej: Amigable, juguetón, energético"
                                android:textColor="@color/text_dark"
                                android:textColorHint="@color/gray"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Historia del animal *"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="#F3F5F7"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:boxStrokeWidth="0dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtHistoriaPublicar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:hint="Cuéntanos la historia de este animal..."
                                android:minLines="4"
                                android:paddingTop="12dp"
                                android:textColor="@color/text_dark"
                                android:textColorHint="@color/gray"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelarPublicar"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:text="Cancelar"
                        android:textAllCaps="false"
                        android:textColor="@color/selector_cancelar_texto"
                        android:textStyle="bold"
                        app:backgroundTint="@color/selector_cancelar_fondo"
                        app:cornerRadius="18dp"
                        app:strokeColor="@color/gray_ligth"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPublicar"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:text="Publicar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:backgroundTint="@color/primary_color"
                        app:cornerRadius="18dp"
                        app:icon="@drawable/check"
                        app:iconPadding="8dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>