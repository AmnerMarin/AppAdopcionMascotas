<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        style="?attr/materialIconButtonStyle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:elevation="15dp"
        app:backgroundTint="@color/tag_color"
        app:cornerRadius="22dp"
        app:icon="@drawable/atras"
        app:iconSize="22dp"
        app:iconTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollDetalle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFotoMascota"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="centerCrop"
                android:src="@drawable/siberiano" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-56dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="26dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#14000000"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="18dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtNombreAnimal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="Max"
                            android:textColor="@color/text_dark"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/chipTipoAnimal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTipoAnimal"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Perro"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/primary_color"
                            app:chipCornerRadius="18dp"
                            app:chipMinHeight="36dp"
                            app:chipStrokeWidth="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/txtRazaAnimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Husky Siberiano"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtPeso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Peso: 4 kg"
                        android:textColor="@color/text_dark"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <LinearLayout
                        android:id="@+id/rowMetricas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                app:cardBackgroundColor="#DFF5EC"
                                app:cardCornerRadius="26dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="12dp"
                                    android:src="@drawable/calendario"
                                    app:tint="@color/primary_color" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Edad"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtEdad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="3 años"
                                android:textColor="@color/text_dark"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                app:cardBackgroundColor="#F3E5F5"
                                app:cardCornerRadius="26dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="12dp"
                                    android:src="@drawable/perro"
                                    app:tint="#9C27B0" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Sexo"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtSexo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Macho"
                                android:textColor="@color/text_dark"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                app:cardBackgroundColor="#E9EEFF"
                                app:cardCornerRadius="26dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="12dp"
                                    android:src="@drawable/perro"
                                    app:tint="@color/tag_color" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Tamaño"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtTamano"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Grande"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/text_dark"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                app:cardBackgroundColor="#FFF0DE"
                                app:cardCornerRadius="26dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="12dp"
                                    android:src="@drawable/selector_favoritos"
                                    app:tint="#F59E0B" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Estado"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtEstado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_regular"
                                android:maxLines="1"
                                android:text="Dispon."
                                android:textColor="@color/text_dark"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#11000000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />

                    <TextView
                        android:id="@+id/txtTemperamentoTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Temperamento"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipsTemperamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:chipSpacingHorizontal="10dp"
                        app:chipSpacingVertical="10dp"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chiptem1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Amigable"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/tag_color"
                            app:chipCornerRadius="16dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chiptem2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Juguetón"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/tag_color"
                            app:chipCornerRadius="16dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chiptem3"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Energético"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/tag_color"
                            app:chipCornerRadius="16dp" />
                    </com.google.android.material.chip.ChipGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#11000000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />


                    <TextView
                        android:id="@+id/txtHistoriaTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Su historia"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtHistoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_regular"
                        android:lineSpacingExtra="3dp"
                        android:text="Max fue comprado en la calle. Es un perro muy cariñoso que ama jugar y estar con personas. Es excelente con niños y otros perros."
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#11000000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />

                    <TextView
                        android:id="@+id/txtRefugioTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Refugio"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardRefugioMini"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/gray_ligth"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp">

                            <!-- Icono circular -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/iconRefugioCircle"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                app:cardBackgroundColor="#DFF5EC"
                                app:cardCornerRadius="26dp"
                                app:cardElevation="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:src="@drawable/ubicacion"
                                    app:tint="@color/primary_color" />
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Nombre -->
                            <TextView
                                android:id="@+id/txtRefugioNombre"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Refugio Amigos Peludos"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@id/iconRefugioCircle"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- Dirección (puede crecer sin romper diseño) -->
                            <TextView
                                android:id="@+id/txtRefugioDireccion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Calle Principal 123, Ciudad con nombre extremadamente largo que ocupa varias líneas sin romper el diseño"
                                android:textColor="@color/gray"
                                android:textSize="14sp"
                                android:maxLines="3"
                                android:ellipsize="end"
                                app:layout_constraintStart_toEndOf="@id/iconRefugioCircle"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txtRefugioNombre" />

                            <!-- Teléfono -->
                            <TextView
                                android:id="@+id/txtRefugioTelefono"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="+34 123 456 789"
                                android:textColor="@color/gray"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@id/iconRefugioCircle"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txtRefugioDireccion"
                                app:layout_constraintBottom_toBottomOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <LinearLayout
                android:id="@+id/bottomActionsOutside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <!-- Fila superior -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuardar"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Guardar"
                        android:textAllCaps="false"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/btn_guardar_selector"
                        app:cornerRadius="18dp"
                        app:icon="@drawable/selector_favoritos"
                        app:iconPadding="10dp"
                        app:iconTint="@color/text_dark"
                        app:strokeColor="@color/gray"
                        app:strokeWidth="1dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="1dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnContactar"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Contactar"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:cornerRadius="18dp"
                        app:backgroundTint="@color/primary_color"
                        app:icon="@drawable/sms50"
                        app:iconTint="@color/white"/>
                </LinearLayout>

                <!-- Botón principal -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSolicitarAdopcion"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Solicitar adopción"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/tag_color"
                    app:icon="@drawable/huella"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>