<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgIconPhone"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="9dp"
        android:src="@drawable/telefono"
        android:tint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLabelPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="TelÃ©fono"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintStart_toEndOf="@id/imgIconPhone"
        app:layout_constraintTop_toTopOf="@id/imgIconPhone"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtValuePhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:text="+34 123 456 789"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintStart_toEndOf="@id/imgIconPhone"
        app:layout_constraintTop_toBottomOf="@id/txtLabelPhone"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
