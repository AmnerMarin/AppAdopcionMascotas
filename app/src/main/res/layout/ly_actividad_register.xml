<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_fondo"
    tools:context=".ActividadRegister">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imagenLogo"
            android:layout_width="303dp"
            android:layout_height="118dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/nuevo_logo_horizontal_ajustado"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvRegister"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="60dp"
            android:translationZ="4dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenLogo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crear Cuenta"
                    android:textAlignment="center"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="@string/nete_a_nuestra_comunidad"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_de_cuenta"
                    android:textColor="@color/text_dark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroupRol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    app:checkedButton="@id/btnAdoptante"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAdoptante"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/adoptante"
                        android:textAllCaps="false"
                        app:icon="@drawable/usuario" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRefugio"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Refugio"
                        android:textAllCaps="false"
                        app:icon="@drawable/edificioc" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <TextView
                    android:id="@+id/txtLabelNombreRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="@color/text_dark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNombreCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fondo_escribir_texto"
                    android:hint="Ej: Ariana"
                    android:paddingStart="15dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtLabelApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Apellidos"
                    android:textColor="@color/text_dark"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    />

                <EditText
                    android:id="@+id/etApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fondo_escribir_texto"
                    android:hint="Ej: García"
                    android:paddingStart="15dp"
                    android:textSize="14sp"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/txtLabelDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Dirección"
                    android:textColor="@color/text_dark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:enabled="false"
                    android:background="@drawable/fondo_escribir_texto"
                    android:hint="Ej: Av. Las Flores 123"
                    android:paddingStart="15dp"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAbrirMapa"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/tag_color"
                    android:text="Seleccionar en el mapa"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/ubicacion"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textColor="@color/text_dark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/email"
                    app:startIconTint="@color/gray">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/fondo_escribir_texto"
                        android:hint="correo@ejemplo.com"
                        android:inputType="textEmailAddress"
                        android:paddingStart="40dp"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Contraseña"
                    android:textColor="@color/text_dark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:startIconDrawable="@drawable/ic_candado_ajustado"
                    app:startIconTint="@color/gray">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroPass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/fondo_escribir_texto"
                        android:hint="********"
                        android:inputType="textPassword"
                        android:paddingStart="40dp"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Teléfono"
                    android:textColor="@color/text_dark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/telefono"
                    app:startIconTint="@color/gray">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/fondo_escribir_texto"
                        android:hint="+1 390 7969 78"
                        android:inputType="phone"
                        android:paddingStart="40dp"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txtLabelDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Descripcion del refugio"
                    android:textColor="@color/text_dark"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etDescripcionRefugio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fondo_escribir_texto"
                    android:hint="Ej: Somos un refugio ...."
                    android:paddingStart="15dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/btnCrearCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/primary_color"
                    android:text="Crear Cuenta"
                    android:textColor="@color/white"
                    app:cornerRadius="10dp" />

                <TextView
                    android:id="@+id/tvIrALogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Ya tienes una cuenta? Iniciar Sesión"
                    android:textAlignment="center" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>