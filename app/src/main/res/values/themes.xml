<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppAdopcionMascotas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/tag_color</item>
        <item name="colorAccent">@color/degraded_color</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="color">@color/orange_adopted</item>
        <item name="colorContainer">@color/gray_ligth</item>
        <item name="colorControlHighlight">@color/gray</item>
    </style>

    <style name="Theme.AppAdopcionMascotas" parent="Base.Theme.AppAdopcionMascotas" />
    <style name="EtiquetaTitulo">
        <item name="android:textSize"> 17sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <!-- BottomNavigationView color de fondo para la pastilla activa -->
    <style name="PastillaSimple" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/fondo</item>
    </style>

    <!-- ShapeableImageView estilo de imagen con redondeado -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">16dp</item>
    </style>


    <style name="TextInputRounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Define el radio de las esquinas -->
        <item name="shapeAppearanceOverlay">@style/RoundedCornersShape</item>

    </style>

    <style name="RoundedCornersShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- cambia el valor -->
    </style>
    <style name="RoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- cambia el valor -->
    </style>

</resources>